<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProgrammerCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/brand</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="calc_button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize"> @dimen/text_btn </item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="number_sys_button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/num_sys_text</item>
    </style>

</resources>